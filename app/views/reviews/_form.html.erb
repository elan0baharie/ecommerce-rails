<%= render 'layouts/errors', :object => @review %>

<%= form_for [@product, @review], id: 'new_product_review', remote: true do |f| %>
  <div class="form-group">
    <%= f.label :author %>
    <%= f.text_field :author %>
    <%= f.label :content %>
    <%= f.text_field :content %>
    <%= f.label :rating %>
    <%= f.number_field :rating, :min => 0 %>
  </div>
  <p><%= f.submit :class => "btn btn-primary yeehaw" %></p>
<% end %>
